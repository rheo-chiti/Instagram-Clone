<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <TextView
                android:id="@+id/commentUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="rheo"
                android:textSize="24sp"
                android:textColor="@color/black" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/commentUsername"
                app:cardBackgroundColor="@color/gray"
                android:layout_marginTop="10dp"
                android:id="@+id/commentTextCard">

                <TextView
                    android:id="@+id/commentText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nice Pic Deer"
                    android:textSize="16sp"
                    android:textColor="@color/black" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/commentTime"
                android:text="31/10/19 at 12:03 PM"
                android:textSize="12sp"
                android:layout_below="@id/commentTextCard"
                android:layout_alignRight="@id/commentTextCard"
                android:layout_marginRight="10sp"
                android:layout_marginTop="10sp" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>